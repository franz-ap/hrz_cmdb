<%# Purpose: Modal dialog for selecting and adding CIs to issues.
            Provides search and selection interface for linking configuration items to tickets. %>

<div id="ci-selection-modal" class="ci-modal" style="display: none;">
  <div class="ci-modal-overlay" onclick="IssueCis.closeModal()"></div>
  <div class="ci-modal-content">
    <div class="ci-modal-header">
      <h3><%= l(:label_select_ci) %></h3>
      <span class="ci-modal-close" onclick="IssueCis.closeModal()">&times;</span>
    </div>
    <div class="ci-modal-body">
      <div id="ci-selection-tree" class="ci-selection-tree"></div>
      <div id="ci-selection-loading" class="ci-selection-loading" style="display: none;">
        <%= l(:label_loading) %>...
      </div>
    </div>
    <div class="ci-modal-footer">
      <%= link_to l(:button_cancel), '#', class: 'button', onclick: 'IssueCis.closeModal(); return false;' %>
    </div>
  </div>
</div>
