<%# Purpose: Detail view partial displaying lifecycle status information and metadata.
            Shows lifecycle status attributes in a read-only format with edit/delete buttons. %>

<div class="lifecycle-status-details">
  <h3><%= lifecycle_status.display_name %></h3>

  <% if can_edit %>
    <%= form_tag "/cmdb/lifecycle_statuses/#{lifecycle_status.id}", method: :put, id: 'lifecycle-status-form', class: 'lifecycle-status-form' do %>
      <div class="form-group">
        <%= label_tag :b_name_full, l('hrz_cmdb.fields.b_name_full') %>
        <div class="field-wrapper">
          <%= text_field_tag 'lifecycle_status[b_name_full]', lifecycle_status.b_name_full, class: 'form-control', maxlength: 120 %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :b_name_abbr, l('hrz_cmdb.fields.b_name_abbr') %>
        <div class="field-wrapper">
          <%= text_field_tag 'lifecycle_status[b_name_abbr]', lifecycle_status.b_name_abbr, class: 'form-control form-control-short', maxlength: 15 %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :b_key, l('hrz_cmdb.fields.b_key') %>
        <div class="field-wrapper">
          <%= text_field_tag 'lifecycle_status[b_key]', lifecycle_status.b_key, class: 'form-control form-control-short', required: true %>
          <span class="hint"><%= l('hrz_cmdb.hints.b_key_lifecycle_status') %></span>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :b_comment, l('hrz_cmdb.fields.b_comment') %>
        <div class="field-wrapper">
          <%= text_area_tag 'lifecycle_status[b_comment]', lifecycle_status.b_comment, class: 'form-control', rows: 5, maxlength: 10000 %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :b_url_doc, l('hrz_cmdb.fields.b_url_doc') %>
        <div class="field-wrapper">
          <div class="url-field-container">
            <%= text_field_tag 'lifecycle_status[b_url_doc]', lifecycle_status.b_url_doc, class: 'form-control url-field', maxlength: 1500 %>
            <span class="url-open-icon <%= lifecycle_status.b_url_doc.blank? ? 'disabled' : '' %>"
                  data-url="<%= lifecycle_status.b_url_doc %>"
                  title="<%= l('hrz_cmdb.buttons.open_url', default: 'Open URL') %>"></span>
          </div>
          <span class="hint"><%= l('hrz_cmdb.hints.b_url_doc') %></span>
        </div>
      </div>

      <fieldset class="status-info">
        <legend><%= l('hrz_cmdb.status_info.title') %></legend>
        <div class="status-info-content">
          <% if lifecycle_status.persisted? %>
            <%= l('hrz_cmdb.status_info.record_id') %>: <%= lifecycle_status.id %>
            <% if lifecycle_status.creator.present? %>
              <%= l('hrz_cmdb.status_info.created_by') %>
              <span class="user-link" title="<%= "#{lifecycle_status.creator.firstname} #{lifecycle_status.creator.lastname}" %>"><%= lifecycle_status.creator.login %></span>
              <%= l('hrz_cmdb.status_info.at') %> <%= format_time(lifecycle_status.created_on) %><%= lifecycle_status.updater.present? ? ',' : '.' %>
            <% end %>
            <% if lifecycle_status.updater.present? %>
              <%= l('hrz_cmdb.status_info.updated_by') %>
              <span class="user-link" title="<%= "#{lifecycle_status.updater.firstname} #{lifecycle_status.updater.lastname}" %>"><%= lifecycle_status.updater.login %></span>
              <%= l('hrz_cmdb.status_info.at') %> <%= format_time(lifecycle_status.updated_on) %>.
            <% end %>
          <% else %>
            <%= l('hrz_cmdb.status_info.new_record') %>
          <% end %>
        </div>
      </fieldset>

      <div class="form-actions">
        <%= submit_tag l('hrz_cmdb.buttons.save'), class: 'button button-positive' %>
        <%= submit_tag l('hrz_cmdb.buttons.save_continue'), class: 'button', name: 'continue' %>
        <% if lifecycle_status.persisted? %>
          <%= submit_tag l('hrz_cmdb.buttons.save_as_copy'), class: 'button', name: 'save_as_copy' %>
        <% end %>
        <% if lifecycle_status.persisted? %>
          <%= link_to l('hrz_cmdb.buttons.delete'), "#", class: 'button button-negative',
                      onclick: "if (confirm('#{l('hrz_cmdb.confirm.delete_lifecycle_status')}')) { HrzCmdb.deleteNode('lifecycle_status', #{lifecycle_status.id}); } return false;" %>
        <% end %>
        <%= link_to l('hrz_cmdb.buttons.cancel'), '#', class: 'button', onclick: 'HrzCmdb.clearDetails(); return false;' %>
      </div>
    <% end %>
  <% end %>
</div>
