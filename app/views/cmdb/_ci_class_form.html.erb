<%# Purpose: Form partial for creating and editing CI class entries in the hierarchy.
            Allows defining CI categories with parent class, sort order, and documentation. %>

<div class="ci-class-form-container">
  <h3><%= l('hrz_cmdb.ci_classes.new') %></h3>

  <%= form_tag '/cmdb/ci_classes', method: :post, id: 'new-ci-class-form', class: 'ci-class-form' do %>
    <div class="form-group">
      <%= label_tag :b_name_full, l('hrz_cmdb.fields.b_name_full') %>
      <div class="field-wrapper">
        <%= text_field_tag 'ci_class[b_name_full]', '', class: 'form-control', maxlength: 120 %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :b_name_abbr, l('hrz_cmdb.fields.b_name_abbr') %>
      <div class="field-wrapper">
        <%= text_field_tag 'ci_class[b_name_abbr]', '', class: 'form-control form-control-short', maxlength: 15 %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :b_key, l('hrz_cmdb.fields.b_key') %>
      <div class="field-wrapper">
        <%= text_field_tag 'ci_class[b_key]', '', class: 'form-control form-control-short', required: true %>
        <span class="hint"><%= l('hrz_cmdb.hints.b_key_ci_class') %></span>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :j_sort, l('hrz_cmdb.fields.j_sort') %>
      <div class="field-wrapper">
        <%= number_field_tag 'ci_class[j_sort]', 0, class: 'form-control form-control-short' %>
        <span class="hint"><%= l('hrz_cmdb.hints.j_sort') %></span>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :j_subclass_of_id, l('hrz_cmdb.fields.j_subclass_of') %>
      <div class="field-wrapper">
        <%= select_tag 'ci_class[j_subclass_of_id]',
                       options_for_select(
                         [[l('hrz_cmdb.select_ci_class'), '']] +
                         HrzcmCiClass.ordered_by_sort_and_abbr.map { |c| ["#{c.b_name_abbr} - #{c.b_name_full}", c.id] }
                       ),
                       class: 'form-control',
                       id: 'ci_class_j_subclass_of_id' %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :b_comment, l('hrz_cmdb.fields.b_comment') %>
      <div class="field-wrapper">
        <%= text_area_tag 'ci_class[b_comment]', '', class: 'form-control', rows: 5, maxlength: 10000 %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :b_url_doc, l('hrz_cmdb.fields.b_url_doc') %>
      <div class="field-wrapper">
        <div class="url-field-container">
          <%= text_field_tag 'ci_class[b_url_doc]', '', class: 'form-control url-field', maxlength: 1500 %>
          <span class="url-open-icon disabled" title="<%= l('hrz_cmdb.buttons.open_url', default: 'Open URL') %>"></span>
        </div>
        <span class="hint"><%= l('hrz_cmdb.hints.b_url_doc') %></span>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag l('hrz_cmdb.buttons.create'), class: 'button button-positive', name: 'create' %>
      <%= link_to l('hrz_cmdb.buttons.cancel'), '#', class: 'button', onclick: 'HrzCmdb.clearDetails(); return false;' %>
    </div>
  <% end %>
</div>
