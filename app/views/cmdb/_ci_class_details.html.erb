<%# Purpose: Detail view partial displaying CI class information including hierarchy position and metadata.
            Shows CI class attributes in a read-only format with edit/delete buttons. %>

<div class="ci-class-details">
  <h3><%= ci_class.b_name_abbr %></h3>

  <% if can_edit %>
    <%= form_tag "/cmdb/ci_classes/#{ci_class.id}", method: :put, id: 'ci-class-form', class: 'ci-class-form' do %>
      <div class="form-group">
        <%= label_tag :b_name_full, l('hrz_cmdb.fields.b_name_full') %>
        <div class="field-wrapper">
          <%= text_field_tag 'ci_class[b_name_full]', ci_class.b_name_full, class: 'form-control', maxlength: 120 %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :b_name_abbr, l('hrz_cmdb.fields.b_name_abbr') %>
        <div class="field-wrapper">
          <%= text_field_tag 'ci_class[b_name_abbr]', ci_class.b_name_abbr, class: 'form-control form-control-short', maxlength: 15 %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :b_key, l('hrz_cmdb.fields.b_key') %>
        <div class="field-wrapper">
          <%= text_field_tag 'ci_class[b_key]', ci_class.b_key, class: 'form-control form-control-short', required: true %>
          <span class="hint"><%= l('hrz_cmdb.hints.b_key_ci_class') %></span>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :j_sort, l('hrz_cmdb.fields.j_sort') %>
        <div class="field-wrapper">
          <%= number_field_tag 'ci_class[j_sort]', ci_class.j_sort, class: 'form-control form-control-short' %>
          <span class="hint"><%= l('hrz_cmdb.hints.j_sort') %></span>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :j_subclass_of_id, l('hrz_cmdb.fields.j_subclass_of') %>
        <div class="field-wrapper">
          <%= select_tag 'ci_class[j_subclass_of_id]',
                         options_for_select(
                           [[l('hrz_cmdb.select_ci_class'), '']] +
                           HrzcmCiClass.ordered_by_sort_and_abbr.where.not(id: ci_class.id).map { |c| ["#{c.b_name_abbr} - #{c.b_name_full}", c.id] },
                           ci_class.j_subclass_of_id
                         ),
                         class: 'form-control',
                         id: 'ci_class_j_subclass_of_id' %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :b_comment, l('hrz_cmdb.fields.b_comment') %>
        <div class="field-wrapper">
          <%= text_area_tag 'ci_class[b_comment]', ci_class.b_comment, class: 'form-control', rows: 5, maxlength: 10000 %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :b_url_doc, l('hrz_cmdb.fields.b_url_doc') %>
        <div class="field-wrapper">
          <div class="url-field-container">
            <%= text_field_tag 'ci_class[b_url_doc]', ci_class.b_url_doc, class: 'form-control url-field', maxlength: 1500 %>
            <span class="url-open-icon <%= ci_class.b_url_doc.blank? ? 'disabled' : '' %>"
                  data-url="<%= ci_class.b_url_doc %>"
                  title="<%= l('hrz_cmdb.buttons.open_url', default: 'Open URL') %>"></span>
          </div>
          <span class="hint"><%= l('hrz_cmdb.hints.b_url_doc') %></span>
        </div>
      </div>

      <fieldset class="status-info">
        <legend><%= l('hrz_cmdb.status_info.title') %></legend>
        <div class="status-info-content">
          <% if ci_class.persisted? %>
            <%= l('hrz_cmdb.status_info.record_id') %>: <%= ci_class.id %>
            <% if ci_class.creator.present? %>
              <%= l('hrz_cmdb.status_info.created_by') %>
              <span class="user-link" title="<%= "#{ci_class.creator.firstname} #{ci_class.creator.lastname}" %>"><%= ci_class.creator.login %></span>
              <%= l('hrz_cmdb.status_info.at') %> <%= format_time(ci_class.created_on) %><%= ci_class.updater.present? ? ',' : '.' %>
            <% end %>
            <% if ci_class.updater.present? %>
              <%= l('hrz_cmdb.status_info.updated_by') %>
              <span class="user-link" title="<%= "#{ci_class.updater.firstname} #{ci_class.updater.lastname}" %>"><%= ci_class.updater.login %></span>
              <%= l('hrz_cmdb.status_info.at') %> <%= format_time(ci_class.updated_on) %>.
            <% end %>
          <% else %>
            <%= l('hrz_cmdb.status_info.new_record') %>
          <% end %>
        </div>
      </fieldset>

      <div class="form-actions">
        <%= submit_tag l('hrz_cmdb.buttons.save'), class: 'button button-positive' %>
        <%= submit_tag l('hrz_cmdb.buttons.save_continue'), class: 'button', name: 'continue' %>
        <% if ci_class.persisted? %>
          <%= submit_tag l('hrz_cmdb.buttons.save_as_copy'), class: 'button', name: 'save_as_copy' %>
        <% end %>
        <% if ci_class.persisted? %>
          <%= link_to l('hrz_cmdb.buttons.delete'), "#", class: 'button button-negative',
                      onclick: "if (confirm('#{l('hrz_cmdb.confirm.delete_ci_class')}')) { HrzCmdb.deleteNode('ci_class', #{ci_class.id}); } return false;" %>
        <% end %>
        <%= link_to l('hrz_cmdb.buttons.cancel'), '#', class: 'button', onclick: 'HrzCmdb.clearDetails(); return false;' %>
      </div>
    <% end %>
  <% end %>
</div>
