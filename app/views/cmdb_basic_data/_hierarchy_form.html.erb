<%# Purpose: Form partial for creating and editing location hierarchy levels.
            Allows defining location types/categories (building, floor, room, etc.) with level ordering. %>

<div class="hierarchy-form-container">
  <h3><%= l('hrz_cmdb.location_hierarchy.new') %></h3>

  <%= form_tag '/cmdb_basic_data/location_hierarchies', method: :post, id: 'new-hierarchy-form', class: 'hierarchy-form' do %>
    <div class="form-group">
      <%= label_tag :b_name_full, l('hrz_cmdb.fields.b_name_full') %>
      <div class="field-wrapper">
        <%= text_field_tag 'hierarchy[b_name_full]', '', class: 'form-control', maxlength: 120 %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :b_name_abbr, l('hrz_cmdb.fields.b_name_abbr') %>
      <div class="field-wrapper">
        <%= text_field_tag 'hierarchy[b_name_abbr]', '', class: 'form-control form-control-short', maxlength: 15 %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :b_key, l('hrz_cmdb.fields.b_key') %>
      <div class="field-wrapper">
        <%= text_field_tag 'hierarchy[b_key]', '', class: 'form-control form-control-short', required: true %>
        <span class="hint"><%= l('hrz_cmdb.hints.b_key_hierarchy') %></span>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :j_level, l('hrz_cmdb.fields.j_level') %>
      <div class="field-wrapper">
        <%= number_field_tag 'hierarchy[j_level]', '', class: 'form-control form-control-short', required: true %>
        <span class="hint"><%= l('hrz_cmdb.hints.j_level') %></span>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :b_comment, l('hrz_cmdb.fields.b_comment') %>
      <div class="field-wrapper">
        <%= text_area_tag 'hierarchy[b_comment]', '', class: 'form-control', rows: 5, maxlength: 10000 %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :b_url_doc, l('hrz_cmdb.fields.b_url_doc') %>
      <div class="field-wrapper">
        <div class="url-field-container">
          <%= text_field_tag 'hierarchy[b_url_doc]', '', class: 'form-control url-field', maxlength: 1500 %>
          <span class="url-open-icon disabled" title="<%= l('hrz_cmdb.buttons.open_url', default: 'Open URL') %>"></span>
        </div>
        <span class="hint"><%= l('hrz_cmdb.hints.b_url_doc') %></span>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag l('hrz_cmdb.buttons.create'), class: 'button button-positive', name: 'create' %>
      <%= link_to l('hrz_cmdb.buttons.cancel'), '#', class: 'button', onclick: 'HrzCmdb.clearDetails(); return false;' %>
    </div>
  <% end %>
</div>